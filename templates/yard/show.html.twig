{% extends 'base.html.twig' %}

{% block title %}Yard{% endblock %}

{% block body %}
    <h1>Yard</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ yard.id }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ yard.city }}</td>
            </tr>
            <tr>
                <th>Budget</th>
                <td>{{ yard.budget }}</td>
            </tr>
            <tr>
                <th>Materials</th>
                <td>{{ yard.materials ? yard.materials|join(', ') : '' }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ yard.date ? yard.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ yard.status }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_yard_index') }}">back to list</a>

    <a href="{{ path('app_yard_edit', {'id': yard.id}) }}">edit</a>

    {{ include('yard/_delete_form.html.twig') }}
{% endblock %}
