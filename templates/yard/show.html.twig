{% extends 'base.html.twig' %}

{% block title %}Chantier{% endblock %}

{% block body %}
    <h1>Chantier</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Identifiant</th>
                <td>{{ yard.id }}</td>
            </tr>
            <tr>
                <th>Commune</th>
                <td>{{ yard.city }}</td>
            </tr>
            <tr>
                <th>Budget</th>
                <td>{{ yard.budget }} €</td>
            </tr>
            <tr>
                <th>Matériaux</th>
                <td>{{ yard.materials ? yard.materials|join(', ') : '' }}</td>
            </tr>
            <tr>
                <th>Date prévue</th>
                <td>{{ yard.projectDate ? yard.projectDate|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_yard_index') }}" class="btn btn-primary">Retourner à la liste</a>

    <a href="{{ path('app_yard_edit', {'id': yard.id}) }}" class="btn btn-primary">Editer</a>

    {{ include('yard/_delete_form.html.twig') }}
{% endblock %}
