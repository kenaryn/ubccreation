{% extends 'base.html.twig' %}

{% block title %}Actualités{% endblock %}

{% block body %}
    <h1>Actualités</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Identifiant</th>
                <td>{{ news.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ news.title }}</td>
            </tr>
            <tr>
                <th>Corps du message</th>
                <td>{{ news.body }}</td>
            </tr>
            <tr>
                <th>Date de publication</th>
                <td>{{ news.postDate ? news.postDate|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_news_admin_index') }}" class="btn btn-primary mb-2">Retour à la liste</a>

    <a href="{{ path('app_news_admin_edit', {'id': news.id}) }}" class="btn btn-primary mb-2">Editer</a>

    {{ include('news/_delete_form.html.twig') }}
{% endblock %}
